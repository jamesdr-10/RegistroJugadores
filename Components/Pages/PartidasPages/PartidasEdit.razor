@page "/Partida/Edit/{PartidaId:int}"

@inject PartidasService partidasService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Editar Partida</PageTitle>

<EditForm Model="Partida" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Editar Partida</h5>
            </div>

            <div class="card-body">

                <div class="mb-3">
                    <label class="form-label"><strong>PartidaId</strong></label>
                    <InputNumber class="form-control" @bind-Value="Partida.PartidaId" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Jugador 1 ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="Partida.Jugador1Id" />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Jugador 2 ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="Partida.Jugador2Id" />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Estado</strong></label>
                    <InputSelect class="form-select" @bind-Value="Partida.EstadoPartida">
                        <option value="Pendiente">Pendiente</option>
                        <option value="En curso">En curso</option>
                        <option value="Finalizada">Finalizada</option>
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Ganador ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="Partida.GanadorId" />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Turno Jugador ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="Partida.TurnoJugadorId" />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Fecha Inicio</strong></label>
                    <InputDate class="form-control" @bind-Value="Partida.FechaInicio" />
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Fecha Fin</strong></label>
                    <InputDate class="form-control" @bind-Value="Partida.FechaFin" />
                </div>

                @if (!string.IsNullOrEmpty(errorMensaje))
                {
                    <div class="alert alert-danger">@errorMensaje</div>
                }
            </div>

            <div class="card-footer text-center">
                <a href="/Partida/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary bi bi-floppy"> Guardar</button>
                <button type="button" class="btn btn-danger bi bi-trash" @onclick="Eliminar"> Eliminar</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int PartidaId { get; set; }

    public Partidas Partida { get; set; } = new Partidas();
    private string errorMensaje = null!;

    protected override async Task OnInitializedAsync()
    {
        if (PartidaId > 0)
        {
            Partida = await partidasService.Buscar(PartidaId) ?? new Partidas();
        }
    }

    private async Task Guardar()
    {
        if (await partidasService.Guardar(Partida))
        {
            navigationManager.NavigateTo("/Partida/Index");
        }
        else
        {
            errorMensaje = "⚠️ No se pudo guardar la partida.";
        }
    }

    private async Task Eliminar()
    {
        if (await partidasService.Eliminar(Partida.PartidaId))
        {
            navigationManager.NavigateTo("/Partida/Index");
        }
        else
        {
            errorMensaje = "⚠️ No se pudo eliminar la partida.";
        }
    }
}